<h1>Welcome to Do Something!</h2>

<% if @current_user %>
  <h2>Welcome, <%= @current_user.first_name %></h2>
  <a href="/activities/new">Create an activity</a><br/>
  <a href="/logout">Logout</a>
<% else %>
  <div>
    <h2>Sign In</h2>
    <form method="post" action="/signin">

      <label>User Email: <input type="text" name="sign_in_user[email]" placeholder="User Email"></label><br/>
      <label>User Password: <input type="password" name="sign_in_user[password]" placeholder="User Password"></label><br/>
      <input type="submit" value="Sign In">
    </form>
  </div>

  <div>
    <h2>Sign Up</h2>
    <form method="post" action="/signup">
      <label>First Name: <input type="text" name="user[first_name]" placeholder="First Name"></label><br/>
      <label>Email: <input type="text" name="user[email]" placeholder="Email"></label><br/>
      <label>Password: <input type="password" name="user[password]" placeholder="Password"></label><br/>
      <input type="submit" value="Sign Up">
    </form>
  </div>
<% end %>
